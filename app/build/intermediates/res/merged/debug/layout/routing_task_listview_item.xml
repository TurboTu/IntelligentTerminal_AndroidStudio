<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- 名称 -->

    <TextView
        android:id="@+id/task_name"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="名称"
        android:textColor="@color/label_text_color_gray"
        android:textSize="16sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="@color/main_gray"
        android:visibility="visible" />
    <!-- 开始 -->

    <TextView
        android:id="@+id/task_begin"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="开始"
        android:textColor="@color/label_text_color_gray"
        android:textSize="16sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="@color/main_gray"
        android:visibility="visible" />
    <!-- 结束 -->

    <TextView
        android:id="@+id/task_end"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="结束"
        android:textColor="@color/label_text_color_gray"
        android:textSize="16sp" />

    <View
        android:id="@+id/line3"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="@color/main_gray"
        android:visibility="visible" />

    <!-- 巡检点 -->

    <TextView
        android:id="@+id/task_point"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="巡检点"
        android:textColor="@color/label_text_color_gray"
        android:textSize="16sp" />

    <View
        android:id="@+id/line4"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="@color/main_gray"
        android:visibility="visible" />
    <!-- 已巡检 -->

    <TextView
        android:id="@+id/task_routed"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="已巡检"
        android:textColor="@color/label_text_color_gray"
        android:textSize="16sp" />

    <View
        android:id="@+id/line5"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="@color/main_gray"
        android:visibility="visible" />
    <!-- 状态 -->

    <TextView
        android:id="@+id/task_state"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="状态"
        android:textColor="@color/label_text_color_gray"
        android:textSize="16sp" />

    <View
        android:id="@+id/line6"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="@color/main_gray"
        android:visibility="visible" />

    <!-- 操作 -->

    <Button
        android:id="@+id/operate_button"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/blue_round_selector"
        android:padding="5dp"
        android:text="@string/button_routing_operate"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:id="@+id/line7"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="@color/main_gray"
        android:visibility="visible" />
</LinearLayout>