<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BaiduTraceActivity" >

    <LinearLayout
        android:id="@+id/logo_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/company_name"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/sys_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout 
            android:id="@+id/main_routing_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:id="@+id/main_routing_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/sel_dot"/>

            <ImageView 
                android:id="@+id/main_routing_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_routing_select"/>
            
            <TextView
                android:id="@+id/main_routing_text"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/main_routing"
                android:textColor="@color/main_button_text_gray"
                android:textSize="18sp" />

        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/main_temperature_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:id="@+id/main_temperature_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/sel_dot"
                android:visibility="invisible"/>
            
            <ImageView 
                android:id="@+id/main_temperature_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_temperature_unselect"/>
            
            <TextView
                android:id="@+id/main_temperature_text"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/main_temperature"
                android:textColor="@color/main_button_text_blue"
                android:textSize="18sp" />

        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/main_talkback_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:id="@+id/main_talkback_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/sel_dot"
                android:visibility="invisible"/>
            
            <ImageView 
                android:id="@+id/main_talkback_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_talkback_unselect"/>
            
            <TextView
                android:id="@+id/main_talkback_text"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/main_talkback"
                android:textColor="@color/main_button_text_blue"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>